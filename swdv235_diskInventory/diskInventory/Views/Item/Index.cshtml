@model ItemListViewModel
@{
    ViewData["Title"] = "Items";
}

<div class="text-center">
    <h1 class="display-4">Items</h1>

    <div class="row">
        <div class="col-sm-11 offset-1">
            @foreach (Genre genre in Model.Genres)
            {
                <h3 class="text-left">@genre.Name</h3>
            <ul class="list-group">
                <li class="list-group-item list-group-item-primary">
                    <div class="row">
                        <h4 class="col-sm-2">
                            Type
                        </h4>
                        <h4 class="col-sm-4">
                            Title
                        </h4>
                        <h4 class="col-sm-3">
                            Release Date
                        </h4>
                        <h4 class="col-sm-1">
                            Status
                        </h4>
                    </div>
                </li>
                @foreach (Item item in genre.Items)
                {
                    <li class="list-group-item">
                        <div class="row">
                            <p class="col-sm-2">
                                @item.Type.Name
                            </p>
                            <p class="col-sm-4">
                                @item.Name
                            </p>
                            <p class="col-sm-3">
                                @Model.FormatReleaseDate(item.ReleaseDate)
                            </p>
                            <p class="col-sm-1">
                                @item.Status.Name
                            </p>
                        </div>
                    </li>
                }
            </ul>
            <br/>
            }
        </div>
    </div>
</div>
